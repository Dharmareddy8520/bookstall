{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/**",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/api/$1" },
    { "src": "/(.*)", "dest": "frontend/build/$1" }
  ],
  "public": true
}
