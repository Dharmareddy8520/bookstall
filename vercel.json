{
  "version": 2,
  "builds": [
    {
      "src": "backend/**",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/$1",
      "methods": ["GET", "HEAD", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}
